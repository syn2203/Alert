<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_around_white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_60">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_80"
        android:text="Are you sure to delete this post?"
        android:textColor="@color/alertdialog_black"
        android:textSize="@dimen/sp_36" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/alertdialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_neg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/alertdialog_neg_blue"
            android:textSize="@dimen/dialog_btn_size" />

        <View
            android:id="@+id/v_line"
            android:layout_width="@dimen/dialog_line"
            android:layout_height="@dimen/dp_100"
            android:background="@color/alertdialog_line" />

        <TextView
            android:id="@+id/btn_pos"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/dialog_btn_size" />
    </LinearLayout>
</LinearLayout>